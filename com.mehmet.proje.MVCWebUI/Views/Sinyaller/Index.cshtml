@using com.mehmet.oracle.entities.BaseClasses
@model List<com.mehmet.oracle.entities.BaseClasses.Sinyaller>

@{
List<string>  Aciliskod = new List<string>
{
    "E400","E401", // normal açılış yeşil
    "E402", // erken açılış sarı
    "E403","E405" // mesai dışı giriş turuncu
};
    List<string> Alarmkod = new List<string>
    {
        "E200", // tek gözden gelen alarm (krımızı)
        "E211", // sabotaj
        "E222", // birden çok gözden gelen alarm
        "E233", // sabotaj
        "E255" // ambulans
    };
    
    List<string> Arizakod = new List<string>
    {
        "E100", // sistem arızası gri
        "E120", // elektrik arızası pembe
        "E140", // telefon aruzası // mavi
       
        
    };
    
    
    Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
    <title>Sinyal Akışı</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
  <body>
      <div class="container-fluid text-center">
        <h3 class="bg-warning" >Anlık Sinyal Akışı</h3>
        <div class="table-responsive">
                <table class="table table-striped table-hover table-sm ">
                        <thead class="thead">
                            <td>Sid</td>
                            <td>Abone No</td>
                            <td>Sinyal Tarihi</td>
                            <td>Sinyal Saati</td>
                            <td>İşl.Saati</td>
                            <td>İşl.Tarihi</td>
                            <td>Sinyal Kodu</td>
                            <td>Bölge No</td>
                            <td>Zone</td>
                            <td>Operatör</td>
                            <td>Sinyal Açıklama</td>
                        </thead>
                        <tbody>
                        @foreach(var sinyal in Model)
                        {
                            if (sinyal.SinyalKod== "E200" ||
                            sinyal.SinyalKod=="E211"||
                            sinyal.SinyalKod=="E222"||
                            sinyal.SinyalKod=="E233"||
                            sinyal.SinyalKod=="E255")
                            {
                                <tr class="bg-danger" >
                                    <td>@sinyal.SinyalId</td>
                                    <td>@sinyal.AboneNo</td>
                                    <td>@sinyal.SinyalTarih</td>
                                    <td>@sinyal.SinyalSaat</td>
                                    <td>İşlenmedi</td>
                                    <td>işlenmedi</td>
                                    <td>@sinyal.SinyalKod</td>
                                    <td>@sinyal.Bolum</td>
                                    <td>@sinyal.Zone</td>
                                    <td>yok</td>
                                    <td>@sinyal.SinyalTAnim</td>
                                </tr>  
                            }
                            if (sinyal.SinyalKod== "E400" ||
                                sinyal.SinyalKod=="E401")
                            {
                                <tr class="bg-success" >
                                    <td>@sinyal.SinyalId</td>
                                    <td>@sinyal.AboneNo</td>
                                    <td>@sinyal.SinyalTarih</td>
                                    <td>@sinyal.SinyalSaat</td>
                                    <td>İşlenmedi</td>
                                    <td>işlenmedi</td>
                                    <td>@sinyal.SinyalKod</td>
                                    <td>@sinyal.Bolum</td>
                                    <td>@sinyal.Zone</td>
                                    <td>yok</td>
                                    <td>@sinyal.SinyalTAnim</td>
                                </tr>  
                            }
                            if (sinyal.SinyalKod== "E402" )
                            {
                                <tr class="bg-warning" >
                                    <td>@sinyal.SinyalId</td>
                                    <td>@sinyal.AboneNo</td>
                                    <td>@sinyal.SinyalTarih</td>
                                    <td>@sinyal.SinyalSaat</td>
                                    <td>İşlenmedi</td>
                                    <td>işlenmedi</td>
                                    <td>@sinyal.SinyalKod</td>
                                    <td>@sinyal.Bolum</td>
                                    <td>@sinyal.Zone</td>
                                    <td>yok</td>
                                    <td>@sinyal.SinyalTAnim</td>
                                </tr>  
                            }
                            if (sinyal.SinyalKod== "E403" || sinyal.SinyalKod== "E405" )
                            {
                                <tr class="bg-dark" >
                                    <td>@sinyal.SinyalId</td>
                                    <td>@sinyal.AboneNo</td>
                                    <td>@sinyal.SinyalTarih</td>
                                    <td>@sinyal.SinyalSaat</td>
                                    <td>İşlenmedi</td>
                                    <td>işlenmedi</td>
                                    <td>@sinyal.SinyalKod</td>
                                    <td>@sinyal.Bolum</td>
                                    <td>@sinyal.Zone</td>
                                    <td>yok</td>
                                    <td>@sinyal.SinyalTAnim</td>
                                </tr>  
                            }
                            if (sinyal.SinyalKod== "E140" )
                            {
                                <tr class="bg-secondary" >
                                    <td>@sinyal.SinyalId</td>
                                    <td>@sinyal.AboneNo</td>
                                    <td>@sinyal.SinyalTarih</td>
                                    <td>@sinyal.SinyalSaat</td>
                                    <td>İşlenmedi</td>
                                    <td>işlenmedi</td>
                                    <td>@sinyal.SinyalKod</td>
                                    <td>@sinyal.Bolum</td>
                                    <td>@sinyal.Zone</td>
                                    <td>yok</td>
                                    <td>@sinyal.SinyalTAnim</td>
                                </tr>  
                            }
                            if (sinyal.SinyalKod== "E120" )
                            {
                                <tr class="bg-info" >
                                    <td>@sinyal.SinyalId</td>
                                    <td>@sinyal.AboneNo</td>
                                    <td>@sinyal.SinyalTarih</td>
                                    <td>@sinyal.SinyalSaat</td>
                                    <td>İşlenmedi</td>
                                    <td>işlenmedi</td>
                                    <td>@sinyal.SinyalKod</td>
                                    <td>@sinyal.Bolum</td>
                                    <td>@sinyal.Zone</td>
                                    <td>yok</td>
                                    <td>@sinyal.SinyalTAnim</td>
                                </tr>  
                            }
                            if (sinyal.SinyalKod== "E100" )
                            {
                                <tr class="bg-dark" >
                                    <td>@sinyal.SinyalId</td>
                                    <td>@sinyal.AboneNo</td>
                                    <td>@sinyal.SinyalTarih</td>
                                    <td>@sinyal.SinyalSaat</td>
                                    <td>İşlenmedi</td>
                                    <td>işlenmedi</td>
                                    <td>@sinyal.SinyalKod</td>
                                    <td>@sinyal.Bolum</td>
                                    <td>@sinyal.Zone</td>
                                    <td>yok</td>
                                    <td>@sinyal.SinyalTAnim</td>
                                </tr>  
                            }
                        }
                        </tbody>
                    </table>
        </div>
        
      </div>
  <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>