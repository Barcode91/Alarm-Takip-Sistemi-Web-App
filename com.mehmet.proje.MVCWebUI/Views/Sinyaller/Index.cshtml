@using com.mehmet.oracle.entities.BaseClasses
@using X.PagedList.Mvc.Core.Common
@model IEnumerable<com.mehmet.oracle.entities.BaseClasses.Sinyaller>

@{
    Layout = "_Layout";
}


    

<div class="container-fluid text-center">
    <h3 class="bg-warning" >Anlık Sinyal Akışı</h3>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-sm ">
            <thead class="thead">
            <td>Sid</td>
            <td>Abone No</td>
            <td>Sinyal Tarihi</td>
            <td>Sinyal Saati</td>
            <td>İşl.Saati</td>
            <td>İşl.Tarihi</td>
            <td>Sinyal Kodu</td>
            <td>Bölge No</td>
            <td>Zone</td>
            <td>Operatör</td>
            <td>Sinyal Açıklama</td>
            </thead>
            <tbody>
            @foreach(var sinyal in Model)
            {
                if (sinyal.SinyalKod== "E200" ||
                    sinyal.SinyalKod=="E211"||
                    sinyal.SinyalKod=="E222"||
                    sinyal.SinyalKod=="E233"||
                    sinyal.SinyalKod=="E255")
                {
                    <tr class="bg-danger" >
                        <td>@sinyal.SinyalId</td>
                        <td>@sinyal.AboneNo</td>
                        <td>@sinyal.SinyalTarih</td>
                        <td>@sinyal.SinyalSaat</td>
                        <td>İşlenmedi</td>
                        <td>işlenmedi</td>
                        <td>@sinyal.SinyalKod</td>
                        <td>@sinyal.Bolum</td>
                        <td>@sinyal.Zone</td>
                        <td>yok</td>
                        <td>@sinyal.SinyalTAnim</td>
                    </tr>  
                }
                if (sinyal.SinyalKod== "E400" ||
                    sinyal.SinyalKod=="E401")
                {
                    <tr class="bg-success" >
                        <td>@sinyal.SinyalId</td>
                        <td>@sinyal.AboneNo</td>
                        <td>@sinyal.SinyalTarih</td>
                        <td>@sinyal.SinyalSaat</td>
                        <td>İşlenmedi</td>
                        <td>işlenmedi</td>
                        <td>@sinyal.SinyalKod</td>
                        <td>@sinyal.Bolum</td>
                        <td>@sinyal.Zone</td>
                        <td>yok</td>
                        <td>@sinyal.SinyalTAnim</td>
                    </tr>  
                }
                if (sinyal.SinyalKod== "E402" )
                {
                    <tr class="bg-warning" >
                        <td>@sinyal.SinyalId</td>
                        <td>@sinyal.AboneNo</td>
                        <td>@sinyal.SinyalTarih</td>
                        <td>@sinyal.SinyalSaat</td>
                        <td>İşlenmedi</td>
                        <td>işlenmedi</td>
                        <td>@sinyal.SinyalKod</td>
                        <td>@sinyal.Bolum</td>
                        <td>@sinyal.Zone</td>
                        <td>yok</td>
                        <td>@sinyal.SinyalTAnim</td>
                    </tr>  
                }
                if (sinyal.SinyalKod== "E403" || sinyal.SinyalKod== "E405" )
                {
                    <tr class="bg-dark" >
                        <td>@sinyal.SinyalId</td>
                        <td>@sinyal.AboneNo</td>
                        <td>@sinyal.SinyalTarih</td>
                        <td>@sinyal.SinyalSaat</td>
                        <td>İşlenmedi</td>
                        <td>işlenmedi</td>
                        <td>@sinyal.SinyalKod</td>
                        <td>@sinyal.Bolum</td>
                        <td>@sinyal.Zone</td>
                        <td>yok</td>
                        <td>@sinyal.SinyalTAnim</td>
                    </tr>  
                }
                if (sinyal.SinyalKod== "E140" )
                {
                    <tr class="bg-secondary" >
                        <td>@sinyal.SinyalId</td>
                        <td>@sinyal.AboneNo</td>
                        <td>@sinyal.SinyalTarih</td>
                        <td>@sinyal.SinyalSaat</td>
                        <td>İşlenmedi</td>
                        <td>işlenmedi</td>
                        <td>@sinyal.SinyalKod</td>
                        <td>@sinyal.Bolum</td>
                        <td>@sinyal.Zone</td>
                        <td>yok</td>
                        <td>@sinyal.SinyalTAnim</td>
                    </tr>  
                }
                if (sinyal.SinyalKod== "E120" )
                {
                    <tr class="bg-info" >
                        <td>@sinyal.SinyalId</td>
                        <td>@sinyal.AboneNo</td>
                        <td>@sinyal.SinyalTarih</td>
                        <td>@sinyal.SinyalSaat</td>
                        <td>İşlenmedi</td>
                        <td>işlenmedi</td>
                        <td>@sinyal.SinyalKod</td>
                        <td>@sinyal.Bolum</td>
                        <td>@sinyal.Zone</td>
                        <td>yok</td>
                        <td>@sinyal.SinyalTAnim</td>
                    </tr>  
                }
                if (sinyal.SinyalKod== "E100" )
                {
                    <tr class="bg-dark" >
                        <td>@sinyal.SinyalId</td>
                        <td>@sinyal.AboneNo</td>
                        <td>@sinyal.SinyalTarih</td>
                        <td>@sinyal.SinyalSaat</td>
                        <td>İşlenmedi</td>
                        <td>işlenmedi</td>
                        <td>@sinyal.SinyalKod</td>
                        <td>@sinyal.Bolum</td>
                        <td>@sinyal.Zone</td>
                        <td>yok</td>
                        <td>@sinyal.SinyalTAnim</td>
                    </tr>  
                }
            }
            </tbody>
        </table>    
            
    </div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
                new PagedListRenderOptions
                {
                    DisplayItemSliceAndTotal = false,
                    ContainerDivClasses = new[] { "navigation" },
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" }
                }
                )
</div>
@section Scripts{
    <script>
        // Workaround to fix style of text for showing items .. through ..
        // Problem related to Boostrap 4 according to issue in link below
        // https://github.com/dncuug/X.PagedList/issues/127
        $(document).ready(function () {
            $('ul.pagination> li.disabled > a').addClass('page-link');
            $('ul.pagination').addClass('justify-content-center');
            
        });
    </script>
}

  