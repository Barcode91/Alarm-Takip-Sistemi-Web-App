       url:"https://localhost:5001/Operator/OperatorGuncelleme",
       type:"POST",
       data :{
          ad:ad,
          tc:tc,
          id:idsi,
          cep:cep
       },
       success: function(sonuc) {
         $("#sonucbilgi").html(sonuc);
         
       }    
       });   
  
}

function temizle() {
        
