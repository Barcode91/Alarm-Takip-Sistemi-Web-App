

@model MusteriAddModel

@{
    
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
@if (TempData["sonuc"] == "0")
 {
     <div class="alert alert-success" role="alert" >
      Abone Başarılı Bir Şekilde Güncellendi.
     </div>
 }
 else if (TempData["sonuc"] == "1")
 {
     <div class="alert alert-danger" role="alert">
         Abone Güncellenemedi Tekrar Deneyiniz.
     </div>
 }
