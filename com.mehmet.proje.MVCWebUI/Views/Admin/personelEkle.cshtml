@model PersonelEkleModel

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}


<div class="container">
  
    <form asp-controller="Admin" asp-action="personelEkle" class="col-md-6">
        <div class="form-group">
            <label>TC. Kimlik Numarası</label>
            <input class="form-control" asp-for="_personel.PersonelTcNo" />
        </div>
        <div class="form-group">
                <label>Ad ve Soyad</label>
                <input class="form-control" asp-for="_personel.Kimlik" />
            </div>
        
        <div class="form-group">
            <label>Cep Telefonu </label>
            <input class="form-control" asp-for="_personel.CepTel" />
        </div>
        
        <div class="form-group">
            <label>İşe Başlama Tarihi </label>
            <input class="form-control" asp-for="_personel.IseBasTarihi" />
        </div>
        <div class="form-group">
            <label>Görev Türü </label>
            <input class="form-control" asp-for="_personel.GorevTur" placeholder="Yönetici Operatör"/>
        </div>
        
        <input type="submit" class="btn btn-success" value="KAYDET" />
        
        
    </form>
    
     @Html.ValidationMessage("Sonuc", new
       {style="color:red;" })



</div>

