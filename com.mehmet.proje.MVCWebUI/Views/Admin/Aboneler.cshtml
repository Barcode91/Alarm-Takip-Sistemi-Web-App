@model AdminAbonelerModel

@{
   
    Layout ="_AdminLayout";
  
}

<div class="container">
    @if (TempData["mesaj"] == "0")
     {
         <div class="alert alert-success" role="alert" >
          Abone Başarılı Bir Şekilde Eklendi.
         </div>
     }
     else if (TempData["mesaj"] == "1")
     {
         <div class="alert alert-danger" role="alert">
             Abone Kayıt Edilemedi Tekrar Deneyiniz.
         </div>
     }



    <div class="container row">
        <div class="col-md-8"> <h4 class="text-primary"> Filitreleme İşlemleri İçin Arama Bölümünü Kullanın </h4> </div>
        <div class="col-md-4">
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Ne İstiyorsunuz" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Arama</button>
            </form>
        </div>
    </div>
    <div class="container-fluid text-center">
        <h3 class="bg-warning">Abone Listesi</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm ">
                <thead class="thead">
                <td>Abone No</td>
                <td>Tc Kimlik No</td>
                <td>Adı Soyadı</td>
                <td>Abone Baş. Tar.</td>
                <td>Abone Bit. Tar.</td>
                <td></td>
                <td></td>
                <td></td>


                </thead>
                <tbody>
                @foreach (var musteri in Model.musteriler)
                {
                    <tr>
                        <td name="aboneNo">@musteri.AboneNo</td>
                        <td>@musteri.MusteriTcNo</td>
                        <td>@musteri.Kimlik</td>

                        <td>@musteri.AboneBasTarihi</td>
                        <td>@musteri.AboneBitTarihi</td>

                        <td><a class="btn btn-sm btn-info" asp-controller="Admin" asp-action="AboneBilgi" asp-route-musteriId="@musteri.MusteriId">Göster</a></td>
                        <td><a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="AboneGuncelle" asp-route-musteriId="@musteri.MusteriId">Güncelle</a></td>
                        <td><a class="btn btn-sm btn-danger" asp-controller="Admin" asp-action="AboneSil" asp-route-musteriId="@musteri.MusteriId">Sil</a></td>




                    </tr>


                }

                </tbody>
            </table>




        </div>

    </div>
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel" itemid="baslik"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="uyari"></p>
                    <p id="id" value="" style="display: none"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button asp-controller="Admin" asp-action="AboneSil" type="button" class="btn btn-primary">Onayla</button>
                </div>
            </div>
        </div>
    </div>


</div>








